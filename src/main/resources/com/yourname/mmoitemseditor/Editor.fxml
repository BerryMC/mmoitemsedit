<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourname.mmoitemseditor.EditorController" prefHeight="750.0" prefWidth="1200.0">
   <children>
      <MenuBar fx:id="menuBar">
        <menus>
          <Menu mnemonicParsing="false" text="%file">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#loadDirectory" text="%open.folder" />
                  <MenuItem mnemonicParsing="false" onAction="#saveChanges" text="%save" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAll" text="%save.all" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="%save.as" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="%exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 10;">
         <children>
            <Label text="%version.label" />
            <ComboBox fx:id="versionComboBox" />
            <Separator orientation="VERTICAL" />
            <Button onAction="#loadDirectory" text="%main.window.select.folder.button" />
            <Label fx:id="statusLabel" style="-fx-font-weight: bold;" text="%main.window.select.folder.status" />
         </children>
      </HBox>
      <SplitPane dividerPositions="0.25" VBox.vgrow="ALWAYS">
         <items>
            <VBox spacing="5.0" style="-fx-padding: 5;">
               <children>
                  <Label style="-fx-font-weight: bold;" text="%main.window.item.list" />
                  <TextField fx:id="searchField" promptText="%main.window.search.prompt" />
                  <TreeView fx:id="fileTreeView" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <StackPane>
               <children>
                  <VBox fx:id="welcomePane" alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="%main.window.welcome.title">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Label text="%main.window.welcome.line1" />
                        <Label text="%main.window.welcome.line2" />
                     </children>
                  </VBox>
                  <VBox fx:id="editorPane" spacing="10.0" style="-fx-padding: 10;" visible="false">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="%main.window.editing" />
                              <Label fx:id="editingItemIdLabel" style="-fx-font-weight: bold; -fx-text-fill: #0066cc;" />
                           </children>
                        </HBox>
                        <TabPane fx:id="attributeTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                           <tabs>
                              <Tab text="%tab.basic">
                                 <content>
                                    <ScrollPane fitToWidth="true" style="-fx-padding: 10;">
                                       <content>
                                          <GridPane fx:id="basicAttributesPane" hgap="10" vgap="10">
                                             <columnConstraints>
                                                <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                                             </columnConstraints>
                                          </GridPane>
                                       </content>
                                    </ScrollPane>
                                 </content>
                              </Tab>
                              <Tab text="%tab.lore">
                                 <content>
                                    <ScrollPane fitToWidth="true" style="-fx-padding: 10;">
                                       <content>
                                          <VBox fx:id="loreEnchantsPane" spacing="15.0" />
                                       </content>
                                    </ScrollPane>
                                 </content>
                              </Tab>
                              <Tab text="%tab.stats">
                                 <content>
                                    <ScrollPane fitToWidth="true" style="-fx-padding: 10;">
                                       <content>
                                          <GridPane fx:id="statsAttributesPane" hgap="10" vgap="10">
                                            <columnConstraints>
                                              <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                                              <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                                            </columnConstraints>
                                          </GridPane>
                                       </content>
                                    </ScrollPane>
                                 </content>
                              </Tab>
                              <Tab text="%tab.advanced">
                                 <content>
                                    <ScrollPane fitToWidth="true" style="-fx-padding: 10;">
                                       <content>
                                          <VBox spacing="10">
                                             <GridPane fx:id="advancedAttributesPane" hgap="10" vgap="10">
                                                <columnConstraints>
                                                   <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                                                   <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                                                </columnConstraints>
                                             </GridPane>
                                             <Separator layoutX="10.0" layoutY="238.0" prefWidth="200.0">
                                                <VBox.margin>
                                                   <Insets top="15.0" bottom="5.0" />
                                                </VBox.margin>
                                             </Separator>
                                             <VBox spacing="5.0">
                                                <children>
                                                   <Label text="%label.perm.effects" />
                                                   <TableView fx:id="permEffectsTable" prefHeight="150.0">
                                                      <columns>
                                                         <TableColumn fx:id="permEffectNameCol" prefWidth="150.0" text="%label.effect" />
                                                         <TableColumn fx:id="permEffectLevelCol" prefWidth="75.0" text="%label.level" />
                                                      </columns>
                                                      <columnResizePolicy>
                                                         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                      </columnResizePolicy>
                                                   </TableView>
                                                   <HBox spacing="5.0">
                                                      <children>
                                                         <Button onAction="#handleAddPermEffect" text="%add" />
                                                         <Button onAction="#handleRemovePermEffect" text="%remove" />
                                                      </children>
                                                   </HBox>
                                                </children>
                                             </VBox>
                                          </VBox>
                                       </content>
                                    </ScrollPane>
                                 </content>
                              </Tab>
                              <Tab text="%tab.complex">
                                 <content>
                                    <ScrollPane fitToWidth="true" style="-fx-padding: 10;">
                                       <content>
                                          <VBox fx:id="complexAttributesPane" spacing="10" />
                                       </content>
                                    </ScrollPane>
                                 </content>
                              </Tab>
                           </tabs>
                        </TabPane>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                           <children>
                              <Button fx:id="newItemButton" disable="true" onAction="#handleNewItem" text="%item.new" />
                              <Button fx:id="duplicateItemButton" disable="true" onAction="#handleDuplicateItem" text="%item.duplicate" />
                              <Button fx:id="deleteItemButton" disable="true" onAction="#handleDeleteItem" text="%item.delete" />
                              <Button fx:id="saveChangesButton" disable="true" onAction="#saveChanges" style="-fx-font-weight: bold; -fx-base: #4CAF50;" text="%item.save.changes" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </items>
      </SplitPane>
   </children>
</VBox>